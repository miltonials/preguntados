<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="JugadorId" class="control-label"></label>
                <select asp-for="JugadorId" class="form-control" asp-items="ViewBag.JugadorId"></select>
                <span asp-validation-for="JugadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PreguntaId" class="control-label"></label>
                <select asp-for="PreguntaId" class="form-control" asp-items="ViewBag.PreguntaId"></select>
