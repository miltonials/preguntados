<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - preguntados_frontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/preguntados_frontend.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light">
    <!-- Agrega la clase "dark" al body para aplicar el tema oscuro -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @try
                {
                    @if (ViewBag.Sesion.jugador != null)
                    {
                        <h5 class="navbar-brand">Bienvenido @ViewBag.Sesion.jugador.nombre | sesion: @ViewBag.Sesion.registro.id</h5>
                        <div class="my-2 my-md-0 ml-auto">
                            <a class="btn btn-danger" asp-area="" asp-controller="Login" asp-action="Index">Cerrar sesión</a>
                        </div>
                    }
                }
                catch (Exception)
                {
                    <p class="navbar-brand">Preguntados</p>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
